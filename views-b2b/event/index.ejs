body {
  background-color: #f7f7f7 !important;
}
.navbar {
  margin-bottom: 0px !important;
}
.bg-color-light {
  padding-top: 50px;
}
.blog-trending li {
  margin-bottom: 20px;
}
.text-overflow {
  max-width: 99%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
li a, label {
  color: #555;
}
.blog-trending h3 {
  font-size: 14px;
  margin: 0 0 5px;
  line-height: 17px;
}
</style>

<!--=== Blog Posts ===-->
<div class="bg-color-light">
	<div class="container content-sm">
		<div class="row">
			<!-- Blog Sidebar -->
			<div class="col-md-3 hidden-xs native-hide">
				<ul class="list-unstyled blog-trending margin-bottom-50">
					<% data.items.forEach(function(post){ %>
						<li class="text-overflow">
							<a href="/events/<%= post.alias || post.id %>"><%= post.title %></a>
						</li>
					<% }); %>
				</ul>
			</div>
			<!-- End Blog Sidebar -->

			<!-- Blog All Posts -->
			<div class="col-md-9">
				<!-- Blog Posts -->
				<%- include postList.ejs %>
				<!-- End Blog Posts -->

				<!-- Pager v2 -->
				<!-- <ul class="pager pager-v2 pager-md no-margin">

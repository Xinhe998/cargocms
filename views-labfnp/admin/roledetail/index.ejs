
<!-- client -->
<table id="main-table" class="table table-striped table-bordered table-hover" width="100%">
  <thead>
    <tr>
      
        
        <th data-hide=""
        data-class="" class="no-sort">
          權限
        </th>
      
        
        <th data-hide=""
        data-class="" class="no-sort">
          api
        </th>
      
        
        <th data-hide=""
        data-class="" class="no-sort">
          角色
        </th>
      
        
        <th data-hide=""
        data-class="" class="no-sort">
          選單名稱
        </th>
      
        <th width="80" data-hide="phone,tablet" class="lastTh"></th>
    </tr>
  </thead>
  <!-- client only -->
  <tbody>
    <tr v-for="item in data.items">
      
        <td>{{ item.name}}</td>
      
        <td>{{ item.api}}</td>
      
        <td>{{ item.RoleId}}</td>
      
        <td>{{ item.MenuItemId}}</td>
      
      <td align="center" style="cursor: pointer;">
        <div class="row">
          <a class="btn btn-default btn-xs" role="button" v-on:click="show(item.id)">
            <i class="fa-fw fa fa-eye text-muted" />
          </a>
          <a class="btn btn-default btn-xs" role="button" v-on:click="edit(item.id)">
            <i class="fa-fw fa fa-pencil-square-o text-muted"/>
          </a>
        </div>
      </td>
    </tr>
  </tbody>
 </table>


<script type="text/javascript">
  var pagefunction = function() {

    // server only
    var columns = [
      
        
          { "data": "name" },
      
        
          { "data": "api" },
        
      
        
          { "data": "RoleId" },
        
      
        
          { "data": "MenuItemId" },
        
      
        { "data": null },
    ]
    var MenuItemIdNames = {
      <% data.menuItems.forEach(function(item) { %>
      <% if (item.SubMenuItems && item.SubMenuItems.length > 0) { %>
        <% item.SubMenuItems.forEach(function(subItem) { %>
            "<%= subItem.id %>": "<%= subItem.title %>",
        <% }); %>
      <% } %>
    <% }); %>
    };
    var RoleIds = {
      <% data.roleid.forEach(function(item) { %>
        "<%= item.id %>": "<%= item.authority %>",
    <% }); %>
    };
    // server only
    var columnDefs = [
      
        
      
        
      
        
      
      {
        "targets"  : 2,
        "render": function ( data, type, row ) {
          return '<p>'+ RoleIds[data] +'</p>'
        }
      },
      {
        "targets"  : 3,
        "render": function ( data, type, row ) {
          return '<p>'+ MenuItemIdNames[data] +'</p>'
        }
      },
      {
        "targets"  : "lastTh",
        "orderable": false,
        "searchable": false,
        "render": function ( data, type, row ) {
          var colBody =
          '<div class="row-action-buttons hidden-xs hidden-sm">'+
          '<a name="showDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
          '<i class="fa-fw fa fa-eye text-muted" />'+
          '</a>'+
          <% if(data.permissions && (data.permissions.update || data.permissions.read_write)) { %>
          '<a name="editDataButton" class="btn btn-default btn-xs" role="button" data-id="'+row.id+'">'+
          '<i class="fa-fw fa fa-pencil-square-o text-muted"/>'+
          '</a>'+
          <% } %>
          '</div>';
          return colBody;
        }
      },
    ]
    var serverSidePaging = <%= (data.serverSidePaging != null)?data.serverSidePaging:false %>;
    <%- include vue.ejs %>
    appMain.$mount("#main-index");
    appMain.loadItems(function() {
      appMain.refresh();
      appMain.renderTable("?roleid=" + $.urlParam('roleid'));
    });
  };

</script>
